.lp-tabbar-container,
.lp-tabbar-item-list,
.lp-tabbar-item-layer {
  box-sizing: border-box; }

.lp-tabbar-container {
  position: relative;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 50px;
  background: #fff;
  overflow: hidden; }
  .lp-tabbar-container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    transform: scale(0.5);
    transform-origin: 0 0;
    pointer-events: none;
    box-sizing: border-box;
    border: 0 solid #e9eaec;
    border-top-width: 1px; }

.lp-tabbar-item-list {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0; }

.lp-tabbar-item-layer {
  height: 100%; }

.lp-tabbar-fixed {
  position: fixed;
  bottom: 0;
  z-index: 2; }
