.lp-toast-container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0; }

.lp-toast-mask {
  width: 100%;
  height: 100%; }

.lp-toast-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
  padding: 10px;
  border-radius: 10px;
  min-width: 200rpx;
  max-width: 70%;
  min-height: 200rpx; }

.lp-toast-icon {
  margin-bottom: 8px;
  font-size: 0; }

.lp-toast-text {
  width: 100%;
  word-wrap: break-word;
  text-align: center; }

.lp-toast-loading {
  display: inline-block;
  vertical-align: middle;
  background: transparent;
  border-radius: 50%;
  border: 2px solid #fff;
  border-left-color: #2d8cf0;
  animation: btn-spin 0.8s linear;
  animation-iteration-count: infinite; }

@keyframes btn-spin {
  0% {
    transform: rotate(0); }
  100% {
    transform: rotate(360deg); } }
